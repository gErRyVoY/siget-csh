---
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';

interface Props {
    href: string;
    label: string;
    icon: AstroComponentFactory;
    active?: boolean;
}

const { href, label, icon: Icon, active = false } = Astro.props;
---

<a
    href={href}
    class:list={[
        "flex items-center gap-3 rounded-md px-4 py-2 text-sm font-medium transition-colors",
        active
            ? "bg-secondary/90 text-secondary-foreground"
            : "hover:bg-secondary/90 hover:text-primary-foreground"
    ]}
>
    <Icon class="h-5 w-5" />
    <span class="group-data-[sidebar-collapsed=true]:hidden">{label}</span>
</a>